{% extends 'base.html.twig' %}

{% block title %}科目一覧{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background:rgb(146, 132, 132); padding: 2px 6px; }
</style>

<h2 class="mt-4">学習中</h2>
<ul>
  {% for s in studying %}
    <li>
      {{ s.name }}
    </li>
  {% else %}
    <li>なし</li>
  {% endfor %}
</ul>

<h2 class="mt-4">学習完了</h2>
<ul>
  {% for s in done %}
    <li>
      {{ s.name }}
    </li>
  {% else %}
    <li>なし</li>
  {% endfor %}
</ul>
{% endblock %}