{# app/templates/base.html.twig #}
<!DOCTYPE html>
<html lang="ja">
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, viewport-fit=cover">
    <title>{% block title %}学習記録 | Study Logs{% endblock %}</title>

    {# ★ AssetMapper でCSSを読み込む（個別に論理パスを指定） #}
    <link rel="stylesheet" href="{{ asset('styles/_variables.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/_base.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/_layout.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/components/_header.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/components/_footer.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/components/_card.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/components/_button.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/components/_form.css') }}">
    <link rel="stylesheet" href="{{ asset('styles/pages/post.css') }}">

    {% block javascripts %}
      {# 既存のJS importmapはそのまま #}
      {% block importmap %}{{ importmap('app') }}{% endblock %}
    {% endblock %}
  </head>

  {# theme は twig.yaml の globals で提供。接頭辞有無を安全に吸収 #}
  <body class="{{ theme starts with('theme-') ? theme : 'theme-' ~ theme }}">
    <header class="site-header">
      <div class="nav">
        <div class="brand"><strong>Study&nbsp;Logs</strong></div>
        <nav class="nav-links" aria-label="Primary">
          <a href="/">Home</a>
          <a href="/posts/new">New</a>
        </nav>
      </div>
    </header>

    <main class="site-main l-main">
      <div class="container">
        {% block flash %}
          {% for label, messages in app.flashes %}
            {% for message in messages %}
              <div class="card" role="status" style="margin-bottom:12px">
                {{ message }}
              </div>
            {% endfor %}
          {% endfor %}
        {% endblock %}

        {% block body %}{% endblock %}
      </div>
    </main>

    <footer class="site-footer">
      <div class="footer-inner">
        <div>&copy; {{ "now"|date("Y") }} Study Logs</div>
        <div><a class="btn" href="#top">Back to top</a></div>
      </div>
    </footer>
  </body>
</html>
