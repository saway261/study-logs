{# templates/post/new.html.twig #}
{% extends 'base.html.twig' %}

{% block body %}
  <h1>日報の新規作成</h1>

  {{ form_start(form, { action: path('post_create'), method: 'POST' }) }}
    {{ form_row(form.date) }}

    <div id="subjects">
      {{ form_row(form.postSubjects) }} {# data-prototype を含む #}
      <button type="button" id="add-row">＋ 行を追加</button>
    </div>

    {{ form_row(form.content) }}

    <button type="submit" class="btn btn-primary">保存</button>
  {{ form_end(form) }}

  {# JS で data-prototype を複製して行追加（省略） #}
{% endblock %}
